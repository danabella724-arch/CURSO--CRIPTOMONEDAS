<script>
function verResultados() {
    evaluarPregunta('p1', 'r1');
    evaluarPregunta('p2', 'r2');
}

function evaluarPregunta(nombre, idResultado) {
    const opciones = document.getElementsByName(nombre);
    let resultado = document.getElementById(idResultado);

    for (let op of opciones) {
        if (op.checked) {
            if (op.value === "correcto") {
                resultado.innerHTML = "✔ Respuesta correcta";
                resultado.className = "resultado correcto";
            } else {
                resultado.innerHTML = "✘ Respuesta incorrecta";
                resultado.className = "resultado incorrecto";
            }
        }
    }
}
</script>

